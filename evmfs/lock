const
  _libcrash =
    require(
      "../libcrash-js/crash-js");
_dirname =
  _libcrash._dirname;
_file_write =
  _libcrash._file_write;
_path_join =
  _libcrash._path_join;
_msg_info =
  _libcrash._msg_info;
_msg_error =
  _libcrash._msg_error;
const
  _evm_contract_call_dynamic_module =
    require(
      '../evm-contracts-tools/evm-contract-call-dynamic');
_contract_run =
  _evm_contract_call_dynamic_module._contract_run;
const
  _evm_contract_call_module =
    require(
      "../evm-contracts-tools/evm-contract-call-static");
_contract_call_static =
  _evm_contract_call_module._contract_call_static;

function
  _global_variables() {
  app_name =
    "lock";
  retries_max =
    "";
  wallet_seed_path =
    "";
  api_key_path =
    "";
  target_network =
    "";
  contract_address =
    "";
  contract_abi_path =
    "";
  contract_bytecode_path =
    "";
  contract_compiler_output_path =
    "";
  publication_namespace =
    "";
  file_hash =
    "";
  index_start =
    "";
  index_end =
    "";
  quiet =
    "";
}

function
  _msg_info_chunk_lock(
    _index,
    _progress,
    _total) {
  let
    _msg,
    _template;
  _template =
    "Locking chunk '{_index}' ('{_progress}'of '{_total}').";
  _msg =
    _template.replaceAll(
      "{_index}",
      _index);
  _msg =
    _msg.replaceAll(
      "{_progress}",
      _progress);
  _msg =
    _msg.replaceAll(
      "{_total}",
      _total);
  _msg_info(
    _msg);
}

function
  _msg_info_chunk_locked(
    _index,
    _progress,
    _total) {
  let
    _msg,
    _template;
  _template =
    "Locked chunk '{_index}' ('{_progress}'of '{_total}').";
  _msg =
    _template.replaceAll(
      "{_index}",
      _index);
  _msg =
    _msg.replaceAll(
      "{_progress}",
      _progress);
  _msg =
    _msg.replaceAll(
      "{_total}",
      _total);
  _msg_info(
    _msg);
}

function
  _msg_info_chunk_locked_already(
    _index,
    _progress,
    _total) {
  let
    _msg,
    _template;
  _template =
    "Chunk '{_index}' already locked ('{_progress}'of '{_total}').";
  _msg =
    _template.replaceAll(
      "{_index}",
      _index);
  _msg =
    _msg.replaceAll(
      "{_progress}",
      _progress);
  _msg =
    _msg.replaceAll(
      "{_total}",
      _total);
  _msg_info(
    _msg);
}

function
  _error_handle(
    error) {
  let
    _message;
  if ( "error" in error &&
       error["error"] != undefined &&
       "message" in error["error"] ) {
    _message =
      error["error"]["message"];
  }
  else if ( "shortMessage" in error ) {
    _message =
      error["shortMessage"];
  }
  _msg_error(
    _message,
    0);
}

function
  _input_data_check(
    _chunks_total) {
  if ( _chunks_total < 1 ) {
    _msg_error(
      "Upper chunk lower than lower chunk.",
      1);
  }
  _msg_info(
    "Input data checked.");
}

async function
  _chunk_lock(
    _contract_run_opts) {
  let
    _tx;
  try {
    _tx = await
      _contract_run.apply(
        null,
        _contract_run_opts);
  } catch(e) {
    _msg_error(
      e,
      1);
  }
  return _tx;
}

async function
  _chunk_locked(
    _locked_call_opts) {
  let
    _passed,
    _retry,
    _value;
  try {
    _value = await
      _contract_call_static.apply(
        null,
        _locked_call_opts);
  } catch(e) {
    _msg_error(
      e,
      1);
  }
  return _value;
}

async function
  _lock(
    _retries_max,
    _wallet_seed_path,
    _api_key_path,
    _target_network,
    _contract_address,
    _contract_abi_path,
    _contract_bytecode_path,
    _contract_compiler_output_path,
    _publication_namespace,
    _file_hash,
    _index_start,
    _index_end
  ) {
  let
    _chunks_total,
    _index,
    _lock_call_base_opts,
    _lock_call_opts,
    _locked,
    _locked_call_base_opts,
    _locked_call_opts,
    _method_args,
    _progress,
    _tx,
    _wallet_password;
  _wallet_password =
    "";
  _lock_call_base_opts = [
    _retries_max,
    _wallet_seed_path,
    _wallet_password,
    _api_key_path,
    0,
    "ether",
    _target_network,
    _contract_address,
    _contract_abi_path,
    _contract_bytecode_path,
    _contract_compiler_output_path,
    "lockChunk"
  ];
  _locked_call_base_opts = [
    _wallet_seed_path,
    _retries_max,
    _api_key_path,
    _target_network,
    _contract_abi_path,
    _contract_bytecode_path,
    _contract_compiler_output_path,
    _contract_address,
    "lock"
  ];
  _method_base_args = [
    _publication_namespace,
    _file_hash
  ];
  _chunks_total =
    _index_end - index_start + 1;
  _input_data_check(
    _chunks_total);
  _progress =
    1;
  _cursor =
    0;
  for ( _index = _index_start;
        _index <= _index_end;
        _index++ ) {
    _msg_info_chunk_lock(
      _index,
      _progress,
      _chunks_total);
    _method_args =
      _method_base_args.concat(
        [_index.toString()]);
    _lock_call_opts =
      _lock_call_base_opts.concat(
        [_method_args]);
    _locked_call_opts =
      _locked_call_base_opts.concat(
        [_method_args]);
    _locked = await
      _chunk_locked(
        _locked_call_opts);
    if ( _locked == true ) {
      _msg_info_chunk_locked_already(
        _index,
        _progress,
        _chunks_total);
    }
    else if ( _locked == false ) {
      _tx = await
        _chunk_lock(
          _lock_call_opts);
      _msg_info_chunk_locked(
        _index,
        _progress,
        _chunks_total);
    }
    _progress =
      _progress + 1;
    _cursor =
      _cursor + 1;
  }
  _msg_info(
    "All chunks correcly locked.");
}

function
  _config_show() {
  let
    _line,
    _text;
  _text =
    [];
  _text.push(
    " Lock configuration:"
  );
  _text.push(
    "          Maximum retries: {retries_max}".replace(
      "{retries_max}",
      retries_max));
  _text.push(
    "              Wallet seed: {wallet_seed_path}".replace(
      "{wallet_seed_path}",
      wallet_seed_path));
  _text.push(
    "                  API Key: {api_key_path}".replace(
      "{api_key_path}",
      api_key_path));
  _text.push(
    "           Target network: {target_network}".replace(
      "{target_network}",
      target_network));
  _text.push(
    "         Contract address: {contract_address}".replace(
      "{contract_address}",
      contract_address));
  _text.push(
    "             Contract ABI: {contract_abi_path}".replace(
      "{contract_abi_path}",
      contract_abi_path));
  _text.push(
    "        Contract bytecode: {contract_bytecode_path}".replace(
      "{contract_bytecode_path}",
      contract_bytecode_path));
  _text.push(
    " Contract compiler output: {contract_compiler_output_path}".replace(
      "{contract_compiler_output_path}",
      contract_compiler_output_path));
  _text.push(
    "    Publication namespace: {publication_namespace}".replace(
      "{publication_namespace}",
      publication_namespace));
  _text.push(
    "                File hash: {file_hash}".replace(
      "{file_hash}",
      file_hash));
  _text.push(
    "              Index start: {index_start}".replace(
      "{index_start}",
      index_start));
  _text.push(
    "                Index end: {index_end}".replace(
      "{index_end}",
      index_end));
  for ( _line in _text ) {
    _msg_info(
      _text[_line]);
  }
}

function
  _usage(
    _exit) {
  let
    _line,
    _text;
  _text = [
    "Lock chunks of an EVMFS file.",
    "",
    "Usage:",
    "  lock",
    "    <quiet>",
    "    <retries_max>",
    "    <api_key_path>",
    "    <target_network>",
    "    <contract_address>",
    "    <contract_abi_path>",
    "    <contract_bytecode_path>",
    "    <contract_compiler_output_path>",
    "    <publication_namespace>",
    "    <index_start>",
    "    <file_hash>",
    "    <index_start>",
    "    <index_end>",
    "",
    "Args:",
    "  <quiet>                          Can be 'y' or 'n'",
    "                                   Default: y",
    "  <retries_max>                    Maximum number of retries before",
    "                                   failing.",
    "  <api_key_path>                   Path of the API key for the",
    "                                   contract ABI provider service.",
    "  <target_network>                 Network on which the contract",
    "                                   resides.",
    "  <contract_address>               Address of the contract.",
    "  <contract_abi_path>              Contract ABI path.",
    "  <contract_bytecode_path>         Path for the contract bytecode.",
    "  <contract_compiler_output_path>  Path for the contract compiler",
    "                                   output path (the hardhat artifact).",
    "  <publication_namespace>          Namespace in which the file is being",
    "                                   published.",
    "  <file_hash>                      Hash of the file to publish.",
    "  <index_start>                    Chunk index from where to start.",
    "  <index_end>                      Final chunk index to lock.",
  ];
  for ( _line of _text ) {
    _msg_info(
      _line);
  }
  process.exit(
    _exit);
}


function
  _cmdline_parse() {
  quiet =
    "y";
  process.argv.forEach(
    function (
      _value,
      _index,
      _array) {
      if ( _index == 2 ) {
        quiet =
          _value;
      }
      if ( _index == 3 ) {
        retries_max =
          _value;
      }
      if ( _index == 4 ) {
        wallet_seed_path =
          _value;
      }
      if ( _index == 5 ) {
        api_key_path =
          _value;
      }
      if ( _index == 6 ) {
        target_network =
          _value;
      }
      if ( _index == 7 ) {
        contract_address =
          _value;
      }
      if ( _index == 8 ) {
        contract_abi_path =
          _value;
      }
      if ( _index == 9 ) {
        contract_bytecode_path =
          _value;
      }
      if ( _index == 10 ) {
        contract_compiler_output_path =
          _value;
      }
      if ( _index == 11 ) {
        publication_namespace =
          _value;
      }
      if ( _index == 12 ) {
        file_hash =
          _value;
      }
      if ( _index == 13 ) {
        index_start =
          _value;
      }
      if ( _index == 14 ) {
        index_end =
          _value;
      }
      if ( _value == "-h" ||
           _value == "--help" ) {
        quiet =
          "n";
        _usage(
          0);
      }
  });
  if ( file_hash == "" ||
       publication_namespace == "" ) {
    quiet =
      "n";
    _usage(
      1);
  }
}


if ( _cmdline_check(
       "lock") == true ) {
  _global_variables();
  _cmdline_parse();
  _config_show();
  app_opts = [
    retries_max,
    wallet_seed_path,
    api_key_path,
    target_network,
    contract_address,
    contract_abi_path,
    contract_bytecode_path,
    contract_compiler_output_path,
    publication_namespace,
    file_hash,
    index_start,
    index_end,
  ];
  _lock.apply(
    null,
    app_opts);
}

module.exports = {
  _lock:
    _lock,
};
